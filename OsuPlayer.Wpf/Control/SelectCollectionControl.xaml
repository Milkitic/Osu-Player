                            </Path>
                        </Canvas>
                    </Viewbox>
                </ControlTemplate>
            </local:CommonButton.IconTemplate>
        </local:CommonButton>
        <ListView
            x:Name="CollectionList"
            Grid.Row="1"
            Margin="0,0,1,0"
            Background="Transparent"
            BorderThickness="0"
            ItemsSource="{Binding Collections, Mode=OneWay}">
            <ListView.Resources>
                <ControlTemplate x:Key="NormalButton" TargetType="{x:Type ListViewItem}">
                    <StackPanel Orientation="Vertical">
                        <local:CommonButton
                            Height="58"
                            MinHeight="26"
                            Margin="0,0,0,2"
                            HorizontalContentAlignment="Left"
                            Background="#FAFAFB"
                            BorderThickness="0"
                            Click="BtnClose_Click"
                            Command="{Binding SelectCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}, Path=DataContext.Entries}"
                            CornerRadius="0">
                            <Grid HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="58" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Border
                                    Width="45"
                                    Height="45"
                                    Margin="0"
                                    Background="{StaticResource ExtraLightBrush}">
                                    <Image
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Source="{Binding ImagePath}"
                                        Stretch="UniformToFill" />
                                </Border>
                                <Label
                                    Grid.Column="1"
                                    MaxWidth="236"
                                    Margin="0,7"
                                    FontSize="15px"
                                    Foreground="#303030">
                                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap" />
                                </Label>
                            </Grid>
                        </local:CommonButton>
                    </StackPanel>
                </ControlTemplate>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Template" Value="{StaticResource NormalButton}" />
                </Style>
            </ListView.Resources>
        </ListView>
    </Grid>
</UserControl>
