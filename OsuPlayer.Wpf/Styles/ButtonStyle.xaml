                            </Ellipse.Fill>
                        </Ellipse>
                        <Line x:Name="ButtonLine" StrokeThickness="2" Stroke="White" Opacity="0.9" >
                            <Line.X1>18</Line.X1>
                            <Line.Y1>9</Line.Y1>
                            <Line.X2>18</Line.X2>
                            <Line.Y2>19</Line.Y2>
                        </Line>
                        <Polygon x:Name="ButtonPolygon" Points="9,8 18,14 9,20"  Stroke="White"  StrokeThickness="0">
