        <ControlTemplate x:Key="PrevButtonTempl">
            <Canvas Width="1000" Height="1000">
                <Canvas.RenderTransform>
                    <RotateTransform Angle="180" CenterX="500" CenterY="500" />
                </Canvas.RenderTransform>
                <Path Fill="{TemplateBinding Foreground}">
                    <Path.Data>
