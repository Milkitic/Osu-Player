<UserControl
    x:Class="Milky.OsuPlayer.UserControls.AddCollectionControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:textBoxComponent="clr-namespace:Milky.OsuPlayer.UiComponents.TextBoxComponent"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <textBoxComponent:CommonTextBox
            x:Name="CollectionName"
            Width="260"
            Height="40"
            Margin="5,10,5,0"
            Padding="3"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="15px"
            Hint="{DynamicResource ui-max30Char}"
            MaxLength="30"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>
