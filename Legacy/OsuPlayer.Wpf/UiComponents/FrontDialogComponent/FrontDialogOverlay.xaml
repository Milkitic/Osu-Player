    <Grid x:Name="MainGrid">
        <Canvas
            x:Name="MainCanvas"
            Opacity="0"
            Visibility="Hidden">
            <!--<Canvas.Background>#40F095BA</Canvas.Background>-->
            <Canvas.Background>#40F0F0F0</Canvas.Background>
            <Border
                x:Name="Parallel"
                Canvas.Left="{Binding (Canvas.Left), ElementName=BoxGrid, Mode=OneWay}"
                Canvas.Top="{Binding (Canvas.Top), ElementName=BoxGrid, Mode=OneWay}"
                Width="{Binding ActualWidth, ElementName=BoxGrid, Mode=OneWay}"
                Height="{Binding ActualHeight, ElementName=BoxGrid, Mode=OneWay}"
                Background="White"
                Opacity="{Binding Opacity, ElementName=BoxGrid, Mode=OneWay}"
                RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="{Binding RenderTransform.ScaleX, ElementName=BoxGrid}" ScaleY="{Binding RenderTransform.ScaleY, ElementName=BoxGrid}" />
                </Border.RenderTransform>
                <Border.Effect>
                    <DropShadowEffect
                        BlurRadius="10"
                        Opacity="0.3"
                        ShadowDepth="0"
                        Color="#000000" />
                </Border.Effect>
            </Border>
            <Grid
                x:Name="BoxGrid"
                Canvas.Left="0"
                Canvas.Top="0"
                Background="White"
                Opacity="0"
                RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1" />
                </Grid.RenderTransform>
                <Grid.Height>520</Grid.Height>
                <Grid.Width>800</Grid.Width>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DockPanel
                    x:Name="TitleBar"
                    Height="34"
                    Background="#10808080"
                    MouseLeftButtonDown="DockPanel_MouseLeftButtonDown"
                    MouseLeftButtonUp="DockPanel_MouseLeftButtonUp"
                    MouseMove="DockPanel_MouseMove"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <Label
                        x:Name="Header"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Content=""
                        TextBlock.FontSize="14" />
                    <buttonComponent:CommonButton
                        Width="34"
                        Height="34"
                        Margin="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="Cancel_Click"
                        IconMargin="0"
                        IconSize="13"
                        IconTemplate="{StaticResource CloseTempl}"
                        MouseDownBackground="#FE3242"
                        MouseDownForeground="White"
                        Style="{StaticResource SettingsButton}" />
                </DockPanel>
                <Rectangle
                    Grid.Row="1"
                    Opacity="0.7"
                    RenderOptions.BitmapScalingMode="HighQuality">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{StaticResource TextureSource3}" Stretch="UniformToFill" />
                    </Rectangle.Fill>
                </Rectangle>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ContentPresenter x:Name="Body" Margin="10" />
                </ScrollViewer>
                <StackPanel
                    x:Name="DialogBar"
                    Grid.Row="2"
                    Margin="10"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <buttonComponent:CommonButton
                        x:Name="BtnOk"
                        Margin="0"
                        Background="#F4F4F4"
                        Click="OK_Click"
                        Content="{DynamicResource ui-ok}"
                        FontWeight="SemiBold"
                        Style="{StaticResource SettingsButton}"
                        TextBlock.FontSize="13" />
                </StackPanel>
            </Grid>
            <Rectangle
                x:Name="Cover"
                Canvas.Left="{Binding (Canvas.Left), ElementName=BoxGrid, Mode=OneWay}"
                Canvas.Top="{Binding (Canvas.Top), ElementName=BoxGrid, Mode=OneWay}"
                Width="{Binding ActualWidth, ElementName=BoxGrid, Mode=OneWay}"
                Height="{Binding ActualHeight, ElementName=BoxGrid, Mode=OneWay}"
                Fill="Transparent"
                Visibility="Hidden" />
        </Canvas>
    </Grid>
</UserControl>
