<Window x:Class="Milky.OsuPlayer.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milky.OsuPlayer"
        mc:Ignorable="d"
        Title="UpdateWindow" SizeToContent="Height" Width="485" ResizeMode="NoResize"
        Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="正在从获取更新……" Margin="10,10,10,5" VerticalAlignment="Top"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,5,10,5">
            <ProgressBar x:Name="DlProgress" Height="20" Margin="0" Width="400" />
            <Label x:Name="LblProgress" Content="0 %" Margin="5,0,0,0" />
        </StackPanel>
        <Label Grid.Row="2" x:Name="LblSpeed" Content="" Margin="10,5,10,10" VerticalAlignment="Top"/>
    </Grid>
</Window>
