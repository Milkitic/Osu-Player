        </Setter>
    </Style>
    <!--  Vertical slider white style  -->
    <Style x:Key="VerticalSliderWhiteStyle" TargetType="Slider">
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Slider">
                    <Grid>
                        <Track Name="PART_Track">
