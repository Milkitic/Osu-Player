<UserControl
    x:Class="Milki.OsuPlayer.UserControls.PlayModeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    FontFamily="{StaticResource SspRegular}"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:radioButtonComponent="clr-namespace:Milki.OsuPlayer.UiComponents.RadioButtonComponent"
    xmlns:models="clr-namespace:Milki.OsuPlayer.Shared.Models;assembly=OsuPlayer.Shared"
    d:DesignHeight="236"
    d:DesignWidth="130"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Border Margin="10" RenderOptions.BitmapScalingMode="LowQuality">
            <Border.Background>
                <ImageBrush
                    ImageSource="{StaticResource TextureSource2}"
                    Opacity="0.7"
                    TileMode="Tile"
                    Viewport="0,0,500,500"
                    ViewportUnits="Absolute" />
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Opacity="0.5"
                    ShadowDepth="0" />
            </Border.Effect>
        </Border>
        <Border Margin="10" Background="#A0ffffff">
            <StackPanel>
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeSingle"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="单曲播放"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeSingleTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.Single}" />
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeSingleLoop"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="单曲循环"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeSingleLoopTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.SingleLoop}" />
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeNormal"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="顺序播放"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeNormalTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.Normal}" />
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeRandom"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="随机播放"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeRandomTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.Random}" />
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeLoop"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="循环列表"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeLoopTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.Loop}" />
                <radioButtonComponent:SwitchRadio
                    x:Name="ModeLoopRandom"
                    Height="30"
                    Padding="0,0,5,0"
                    Background="Transparent"
                    Checked="Mode_Changed"
                    CheckedBackground="#80D0D0D0"
                    Content="随机循环"
                    IconMargin="0,0,5,0"
                    IconSize="18"
                    IconTemplate="{StaticResource ModeLoopRandomTempl}"
                    MouseDownBackground="#80D8D8D8"
                    MouseOverBackground="#80E0E0E0"
                    Tag="{x:Static models:PlaylistMode.LoopRandom}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
